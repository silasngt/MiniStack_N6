extends ../../layouts/default.pug


block main
  // Banner Cải tiến
  .container.mt-4.mb-5
    .banner
      .banner-content
        h1 Thảo luận không giới hạn
        h2 Khám phá mọi chủ đề!
      a.banner-cta.btn(href="/forum") Tham gia tại đây!
  
  // Câu hỏi nổi bật
  .container.mb-5
    h4.mb-4 Câu hỏi nổi bật
    .row.g-4
      each question, idx in forumTopics.slice(0, 3)
        .col-md-4
          .question-card
            .d-flex.align-items-start
              .question-number #{idx + 1}
              div
                a.text-decoration-none(href=`/forum/exchange/${question.TopicID}`) 
                  .error-text #{question.Title}
                  p.mb-0 #{question.Content.length > 120 ? question.Content.substring(0, question.Content.lastIndexOf(' ', 120)) + '...' : question.Content}
                
    
