.sidebar
    .sidebar-menu
        // Menu chính
        a.sidebar-item.active(href="/forum-topic")
            i.fas.fa-comments.sidebar-icon
            span Diễn đàn
        
        a.sidebar-item(href="/chatBox")
            i.fas.fa-robot.sidebar-icon
            span Trao đổi cùng AI
        
        a.sidebar-item(href="/compile")
            i.fas.fa-code.sidebar-icon
            span Biên dịch
        
        a.sidebar-item(href="/blog")
            i.fas.fa-file-alt.sidebar-icon
            span Bài viết
        
        a.sidebar-item(href="/userDocument")
            i.fas.fa-book.sidebar-icon
            span Tài liệu

    // Phần footer của sidebar
    .sidebar-footer
        if user
            a.sidebar-item(href="/UserProfile")
                i.fas.fa-cog.sidebar-icon
                span Cài đặt

            a.sidebar-item#sidebar-logout(href="#")
                i.fas.fa-sign-out-alt.sidebar-icon
                span Đăng xuất

    // Thông tin người dùng
    .user-profile
        if user
            if user.Avatar
                img.user-avatar(src=user.Avatar alt="User Avatar")
            else
                i.fas.fa-user-circle.fa-2x.user-avatar
            .user-info
                .user-name= user.FullName || user.Email
                .user-email= user.Email
        else
            img.user-avatar(src="https://i.pravatar.cc/100" alt="User Avatar")
            .user-info
                .user-name Guest
                .user-email ""

form#sidebar-logout-form(action="/auth/logout", method="post", style="display:none")

//js cho logout 
script.
    document.getElementById('sidebar-logout')?.addEventListener('click', function(e) {
        e.preventDefault();
        document.getElementById('sidebar-logout-form').submit();
    });