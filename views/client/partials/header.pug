header.py-2.border-bottom
    .container.d-flex.justify-content-between.align-items-center
        // Logo bên trái
        a.navbar-brand(href="/") miniStack


        // Ô tìm kiếm ở giữa
        .d-flex.w-50.justify-content-center
            form.input-group.w-75(action="/search" method="GET")
                input.form-control.search-input(type="search" name="q" placeholder="Tìm kiếm câu hỏi..." value=searchQuery || "")
                .input-group-append
                    button.btn.btn-search(type="submit")
                        i.fas.fa-search

        // Các liên kết và nút đăng nhập bên phải
        .d-flex.align-items-center
            a.nav-link.text-dark.me-3(href="/") Trang chủ
            a.nav-link.text-dark.me-3(href="#") Liên hệ
            a.btn.btn-login.px-4(href="/auth/login") Đăng nhập