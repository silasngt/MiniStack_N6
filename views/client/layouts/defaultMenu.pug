doctype html 
html 
    head 
        title #{pageTitle}
        //- Nhúng Bootstrap 4 vào
        link(rel="stylesheet" 
        href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css")
        link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css")

        //- File CSS
        link(rel="stylesheet" href="/css/styleK.css")
        link(rel="stylesheet" href="/css/styleMenu.css")
        link(rel="stylesheet" href="/css/forumTopic.css")
        link(rel="stylesheet", href="/css/styleN.css")



    body
        - if (messages.success)
            div(
                class="alert alert-success alert-message"
                alert-message
            ) #{messages.success}
        - if (messages.error)
            div(
                class="alert alert-danger alert-message"
                alert-message
            ) #{messages.error}
        include ../partials/header.pug

        include ../partials/sider-bar.pug

        .main-wrapper
            block main 

        include ../partials/footer.pug

        //- Nhúng thư viện jQuery và Bootstrap 4 vào
        script(src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js")
        //- File JS
        script(src="/js/script.js")
        