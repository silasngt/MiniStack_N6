extends ../../layouts/default.pug

block main
    .create-post-container
        .create-header
            h1.create-title Thêm bài viết mới
            button.btn-close(onclick="window.history.back()")
                i.fas.fa-times

        .create-form-container
            form.create-post-form(action="/admin/bai-viet/them-moi" method="POST")
                .form-group
                    label(for="title") Tiêu đề
                    input#title.form-control(type="text" name="title", required)

                .form-group
                    label(for="category") Danh mục
                    select#category.form-control(name="category", required)
                        option(value="", selected, disabled) Chọn danh mục
                        option(value="1") Lập trình
                        option(value="2") Cơ sở dữ liệu
                        option(value="3") Công nghệ mới
                        option(value="4") Trí tuệ nhân tạo
                        option(value="5") Phát triển web
                        option(value="6") Phát triển ứng dụng di động

                .form-group
                    label(for="author") Tác giả
                    input#author.form-control(type="text" name="author", required)

                .form-group
                    label(for="content") Nội dung
                    textarea#content.form-control.content-area(name="content" rows="10", required)

                .form-group
                    label.attachment-label Attach Image (4/4)
                    .image-attachments
                        .image-preview
                            img(src="/admin/images/placeholder-doc1.jpg" alt="Document preview")
                        .image-preview
                            img(src="/admin/images/placeholder-doc2.jpg" alt="Document preview")
                        .image-preview
                            img(src="/admin/images/placeholder-doc3.jpg" alt="Document preview")
                        .image-preview
                            img(src="/admin/images/placeholder-doc4.jpg" alt="Document preview")
                        .image-upload-box
                            label(for="image-upload")
                                i.fas.fa-cloud-upload-alt
                            input#image-upload(type="file" accept="image/*", hidden)

                .form-buttons
                    button.btn-submit(type="submit") THÊM
                    button.btn-cancel(type="button" onclick="window.history.back()") HỦY