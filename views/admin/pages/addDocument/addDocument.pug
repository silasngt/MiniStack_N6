extends ../../layouts/default.pug

block main
  div(class="h-screen bg-[#F8FAFB] flex flex-col")
    div(class="flex-1 flex flex-col p-4")
      // Header với nút đóng
      div(class="bg-white rounded-lg shadow-sm border border-gray-200 flex-1 flex flex-col")
        div(class="flex items-center justify-between px-6 py-2 border-b border-gray-200")
          h2(class=" font-semibold text-gray-900 text-[28px]") Thêm tài liệu mới
          button(type="button" class="text-gray-400 hover:text-gray-600 transition-colors")
            svg(class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24")
              path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12")

        // Form content
        div(class="px-6 py-6 flex-1 overflow-y-auto")
          form(action="#" method="POST" enctype="multipart/form-data" class="h-full flex flex-col")
            // Tiêu đề
            div(class="mb-2")
              label(for="title" class="block text-sm font-medium text-gray-700 mb-2") Tiêu đề
              input(
                type="text"
                id="title"
                name="title"
                class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
                placeholder="Nhập tiêu đề tài liệu"
              )

            // Danh mục
            div(class="mb-2")
              label(for="category" class="block text-sm font-medium text-gray-700 mb-2") Danh mục
              select(
                id="category"
                name="category"
                class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors bg-white"
              )
                option(value="" disabled selected) Chọn danh mục
                option(value="tai-lieu-hoc-tap") Tài liệu học tập
                option(value="bai-giang") Bài giảng
                option(value="de-thi") Đề thi
                option(value="khac") Khác

            // Link
            div(class="mb-2")
              label(for="link" class="block text-sm font-medium text-gray-700 mb-2") Link
              input(
                type="url"
                id="link"
                name="link"
                class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
                placeholder="https://example.com"
              )

            // Nội dung
            div(class="mt-0  flex-1")
              label(for="content" class="block text-sm font-medium text-gray-700 mb-2") Nội dung
              textarea(
                id="content"
                name="content"
                class="w-full h-40 px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors resize-none"
                placeholder="Nhập nội dung mô tả tài liệu..."
                )


            // Attach Image và Action buttons
            div(class="mb-8 -mt-15")
              label(class="block text-sm font-medium text-gray-700 mt-1") Attach Image (4/4)
              
              div(class="flex items-end justify-between gap-4")
                // Grid ảnh bên trái
                div(class="grid grid-cols-4 gap-4 flex-1")
                  // Ảnh đã upload
                  div(class="relative group")
                    img(
                      src="https://www.crowe.com/vn/vi-vn/-/media/crowe/firms/asia-pacific/vn/crowehorwathvn/images/news/notes-on-notice-of-tax-inspection-examination-receiving.jpg?rev=-1&hash=14DA7D689F742216225703372840C717"
                      alt="Uploaded image"
                      class="w-full h-24 object-cover rounded-lg border border-gray-200"
                    )
                    button(
                      type="button"
                      class="absolute top-1 right-1 bg-red-500 text-white rounded-full w-5 h-5 flex items-center justify-center text-xs opacity-0 group-hover:opacity-100 transition-opacity"
                    ) ×
                    
                  // Upload button
                  label(
                    for="image-upload"
                    class="flex flex-col items-center justify-center w-full h-24 border-2 border-gray-300 border-dashed rounded-lg cursor-pointer bg-gray-50 hover:bg-gray-100 transition-colors"
                  )
                    div(class="flex flex-col items-center justify-center")
                      svg(class="w-6 h-6 text-gray-400 mb-1" fill="none" stroke="currentColor" viewBox="0 0 24 24")
                        path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12")
                      span(class="text-xs text-gray-500") Upload
                    input(
                      id="image-upload"
                      type="file"
                      class="hidden"
                      accept="image/*"
                      multiple
                    )

                // Action buttons bên phải
                div(class="flex space-x-3")
                  button(
                    type="button"
                    class="px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors h-fit"
                  ) HỦY
                  
                  button(
                    type="submit"
                    class="px-6 py-2 text-sm font-medium text-white bg-blue-600 border border-transparent rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors h-fit"
                  ) THÊM