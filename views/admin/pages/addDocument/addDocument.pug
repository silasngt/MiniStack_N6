extends ../../layouts/default.pug

block main
  .add-document-container
    .add-document-wrapper
      // Header với nút đóng
      .form-card
        .form-header
          h2.form-title Thêm tài liệu mới
          button.close-btn(type="button")
            svg.close-icon(fill="none" stroke="currentColor" viewBox="0 0 24 24")
              path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12")

        // Form content
        .form-content
          form.document-form(action="#" method="POST" enctype="multipart/form-data")
            // Tiêu đề
            .form-group
              label.form-label(for="title") Tiêu đề
              input.form-input(
                type="text"
                id="title"
                name="title"
                placeholder="Nhập tiêu đề tài liệu"
              )

            // Danh mục
            .form-group
              label.form-label(for="category") Danh mục
              select.form-select(
                id="category"
                name="category"
              )
                option(value="" disabled selected) Chọn danh mục
                option(value="tai-lieu-hoc-tap") Tài liệu học tập
                option(value="bai-giang") Bài giảng
                option(value="de-thi") Đề thi
                option(value="khac") Khác

            // Link
            .form-group
              label.form-label(for="link") Link
              input.form-input(
                type="url"
                id="link"
                name="link"
                placeholder="https://example.com"
              )

            // Nội dung
            .form-group.content-group
              label.form-label(for="content") Nội dung
              textarea.form-textarea(
                id="content"
                name="content"
                placeholder="Nhập nội dung mô tả tài liệu..."
              )

            // Attach Image và Action buttons
            .form-footer
              .image-section
                label.image-label Attach Image (4/4)
                
                .image-actions-wrapper
                  // Grid ảnh bên trái
                  .image-grid
                    // Ảnh đã upload
                    .image-item
                      img.uploaded-image(
                        src="https://www.crowe.com/vn/vi-vn/-/media/crowe/firms/asia-pacific/vn/crowehorwathvn/images/news/notes-on-notice-of-tax-inspection-examination-receiving.jpg?rev=-1&hash=14DA7D689F742216225703372840C717"
                        alt="Uploaded image"
                      )
                      button.delete-image-btn(type="button") ×
                      
                    // Upload button
                    label.upload-area(for="image-upload")
                      .upload-content
                        svg.upload-icon(fill="none" stroke="currentColor" viewBox="0 0 24 24")
                          path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12")
                        span.upload-text Upload
                      input.file-input(
                        id="image-upload"
                        type="file"
                        accept="image/*"
                        multiple
                      )

                  // Action buttons bên phải
                  .action-buttons
                    button.btn-cancel(type="button") HỦY
                    button.btn-submit(type="submit") THÊM