  // Trang thêm danh mục mới (ẩn mặc định)
  .add-category-page(id="addCategoryPage" style="display: none;")
    .container-fluid.p-4
      .row
        .col-12
          .d-flex.justify-content-between.align-items-center.mb-4
            h3.mb-0 Thêm danh mục mới
            button.btn.btn-light.btn-sm(id="closeCategoryForm" title="Đóng")
              i.fas.fa-times.text-danger
          
          .card.shadow-sm
            .card-body.p-4
              form(id="categoryForm")
                .mb-4
                  label.form-label.fw-bold(for="categoryTitle") Tiêu đề
                  input.form-control.form-control-lg(type="text" id="categoryTitle" placeholder="Nhập tiêu đề danh mục")
                
                .mb-4
                  label.form-label.fw-bold(for="categoryType") Loại
                  select.form-select.form-select-lg.ml-3(id="categoryType")
                    option(value="" selected) Chọn loại danh mục
                    option(value="bai-viet") Bài viết
                    option(value="tai-lieu") Tài liệu
                    option(value="dien-dan") Diễn đàn
                
                
                .mt-5.d-flex.justify-content-between
                    button.btn.btn-primary.btn-lg.px-5(type="submit") THÊM
                    button.btn.btn-outline-secondary.btn-lg.px-4(type="button" id="cancelCategory") HỦY



