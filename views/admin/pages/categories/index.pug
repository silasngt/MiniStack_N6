extends ../../layouts/default.pug

block main
  .user-management-content
    .header-section
      h1.page-title Danh sách danh mục
      a.add-a(href='/admin/categories/add' type="a")
        | Thêm danh mục mới
    .table-container
      table.user-table
        thead
          tr
            th ID
            th Tên danh mục
            th Loại
            th Thao tác
        tbody
          if categories && categories.length
            each category in categories
              tr.user-row
                td= category.CategoryID
                td= category.Name
                td
                  if Array.isArray(category.Type)
                    = category.Type.join(', ')
                  else
                    = category.Type
                td.action-buttons
                  - var type = 'categories';
                  - var id = category.CategoryID;
                  - var status = category.status;
                  - var editUrl = `/admin/categories/edit/${category.CategoryID}`;
                  - var deleteFunc = 'deleteCategory';
                  include ../../partials/action.pug
                  
    include ../../partials/pagination.pug