extends ../../layouts/default.pug

block main
    .add-category-page#addCategoryPage
        .user-management-content
            .header-section
                h1.page-title Thêm danh mục mới
                a.btn.btn-light.btn-sm(href='/admin/categories/' title="Đóng")
                    i.fas.fa-times

            .table-container
                .p-4
                    form#categoryForm(action='/admin/categories/add' method="POST")
                        .mb-4
                            label.form-label.fw-bold(for="name") Tiêu đề
                            input.form-control.form-control-lg(type="text" name="name" required placeholder="Nhập tiêu đề danh mục")

                        .mb-4
                            label.form-label.fw-bold(for="categoryType") Loại
                            select.form-select.form-select-lg(name="type[]" id="categoryType" multiple required)
                                option(value="Bài viết") Bài viết
                                option(value="Tài liệu") Tài liệu
                                option(value="Diễn đàn") Diễn đàn

                        .mt-5.d-flex.justify-content-between
                            button.btn-login.btn-lg.px-4(type="submit") THÊM
                            //- button.btn.btn-outline-secondary.btn-lg.p-4(type="button", id="cancelCategory" href='/admin/categories/') HỦY
                            a.btn.btn-outline-secondary.btn-lg.p-4#closeCategoryForm(href='/admin/categories/' title="HỦY" ) HỦY