mixin pagination(currentPage,totalPages)
 nav(class="mt-3")
     ul(class="pagination")
      if(currentPage > 1)
       li(class="page-item")
        button(class="page-link" button-pagination=currentPage-1) Trang trước
      if(currentPage < totalPages/2 && currentPage !== 1)
        li(class="page-item")
         button(class="page-link" ) ...
      else 
        - for(var i = 1 ;i <= totalPages;i++)
         li(class="page-item")
          button(class="page-link" button-pagination=i) #{i}
      
      if(currentPage < totalPages)
       li(class="page-item")
        button(class="page-link" button-pagination=currentPage+1) Trang sau