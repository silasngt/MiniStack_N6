doctype html
html(lang='vi')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title MiniStack - Đăng ký
    link(rel="stylesheet", href="/css/styleQ.css")

      

  body
    .container
      .form-section
        a.logo(href="/") miniStack
        
        .greeting Xin chào !
        
        h1.title Đăng ký
        
        form#signupForm(method='POST', action='/auth/register')
          .form-group
            label(for='email') Email
            input#email(type='email', name='email', placeholder='Nhập email', required)
          
          .form-group
            label(for='fullname') Tên người dùng
            input#fullname(type='text', name='fullname', placeholder='Nhập tên người dùng', required)
          
          .form-row
            .form-group
              label(for='phone') Số điện thoại
              input#phone(type='tel', name='phone', placeholder='Nhập số điện thoại', required)
            
            .form-group
              label(for='gender') Giới tính
              .gender-select
                select#gender.gender-dropdown(name='gender', required)
                  option(value='', disabled, selected) Chọn giới tính
                  option(value='Nam') Nam
                  option(value='Nữ') Nữ
          
          .form-group
            label(for='password') Mật khẩu
            .password-field
              input#password(type='password', name='password', placeholder='Nhập mật khẩu', required)
              button.password-toggle(type='button', onclick='togglePassword("password")')
               
          
          .form-group
            label(for='confirmPassword') Xác nhận mật khẩu
            .password-field
              input#confirmPassword(type='password', name='confirmPassword', placeholder='Nhập xác nhận mật khẩu', required)
              button.password-toggle(type='button', onclick='togglePassword("confirmPassword")')
              
          
          button.submit-btn(type='submit') Đăng ký
          
          .login-link
            | Bạn đã có tài khoản ? 
            a(href='/auth/login') Đăng nhập

      .illustration-section
        .illustration
          img.auth-img(src="https://cdn.prod.website-files.com/649c7c91a35b12e0bb55417d/64ec93be340c2e1d871eb5b3_plutonapps_partner.svg" alt="register")
    script(src="/js/scriptQ.js")

